<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Customer Payroll</title>
  <link rel="stylesheet" href="styles.css"> <!-- Add your CSS file if needed -->
</head>
<body>
  <h1>Customer Payroll</h1>

  <!-- Display success or error messages -->
  <% if (success) { %>
    <div class="alert alert-success"><%= success %></div>
  <% } %>
  <% if (error) { %>
    <div class="alert alert-error"><%= error %></div>
  <% } %>

  <!-- Add New Customer to Payroll Form -->
  <h2>Add New Customer to Payroll</h2>
  <form method="POST" action="/customers/add">
    <input type="text" name="name" placeholder="Customer Name" required>
    <select name="payment_type" required>
      <option value="">Select Payment Type</option>
      <option value="monthly">Monthly</option>
      <option value="weekly">Weekly</option>
      <option value="hourly">Hourly</option>
    </select>
    <input type="number" name="payment_amount" placeholder="Payment Amount" required>
    <button type="submit">Add Customer</button>
  </form>

  <!-- Customer List Table -->
  <h2>Customer List</h2>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Payment Type</th>
        <th>Payment Amount</th>
      </tr>
    </thead>
    <tbody>
      <% customers.forEach(customer => { %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= customer.name %></td>
          <td><%= customer.payment_type %></td>
          <td><%= customer.payment_amount %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</body>
</html>
